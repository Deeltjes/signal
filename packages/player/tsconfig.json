{
  "compilerOptions": {
    "baseUrl": "./src",
    "sourceMap": true,
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "lib": ["es2019", "dom"],
    "strictNullChecks": true,
    "alwaysStrict": true,
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "strict": true,
  },
  "include": ["src/**/*"]
}
