{
  "compilerOptions": {
    "target": "esnext",
    "module": "none",
    "allowJs": false,
    "noImplicitAny": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["esnext"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/preload.ts"]
}
